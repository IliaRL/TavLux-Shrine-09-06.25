<div class="video-banner-section">
  <!-- Desktop Video -->
  <video class="desktop-video" autoplay muted loop playsinline>
    <source src="{{ section.settings.desktop_video.sources.last.url }}" type="video/mp4">
  </video>
  
  <!-- Mobile Video -->
  <video class="mobile-video" autoplay muted loop playsinline>
    <source src="{{ section.settings.mobile_video.sources.last.url }}" type="video/mp4">
  </video>
  
  <!-- Content -->
  <div class="video-content">
    <div class="text-wrapper">
      <h1 class="main-heading">{{ section.settings.heading }}</h1>
      <p class="subheading">{{ section.settings.subheading }}</p>
      <a href="{{ section.settings.button_link }}" class="custom-button">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Video Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Venus Long Sleeve Dress"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Most Loved"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video (16:9)"
    },
    {
      "type": "video",
      "id": "mobile_video",
      "label": "Mobile Video (3:4)"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Video Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}